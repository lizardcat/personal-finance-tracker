# Flask Configuration
# CRITICAL: Generate a secure SECRET_KEY using: python -c "import secrets; print(secrets.token_hex(32))"
# This is REQUIRED for production. Never use the default value.
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///finance_tracker.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/finance_tracker

# Exchange Rate API (Optional)
# Get a free API key from exchangerate-api.com or similar service
EXCHANGE_API_KEY=your-exchange-rate-api-key-here

# Security Settings (Production Only)
# Set these to true in production with HTTPS
REMEMBER_COOKIE_SECURE=false
SESSION_COOKIE_SECURE=false

# Application Settings
PORT=5000

# Email Configuration (Optional - Welcome emails and password reset)
# NOTE: App works fine without email - emails are just skipped if not configured
#
# Quick Setup:
# Gmail: Enable 2FA â†’ Create App Password at https://myaccount.google.com/apppasswords
# SendGrid: Get API key at https://app.sendgrid.com/settings/api_keys
# Mailgun: Get SMTP credentials at https://app.mailgun.com/app/sending/domains
#
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=noreply@financetracker.com
#
# Alternative: SendGrid
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# Logging Level (Optional)
LOG_LEVEL=INFO