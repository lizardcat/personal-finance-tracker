# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///finance_tracker.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/finance_tracker

# Exchange Rate API (Optional)
# Get a free API key from exchangerate-api.com or similar service
EXCHANGE_API_KEY=your-exchange-rate-api-key-here

# Security Settings (Production Only)
# Set these to true in production with HTTPS
REMEMBER_COOKIE_SECURE=false
SESSION_COOKIE_SECURE=false

# Application Settings
PORT=5000

# Email Configuration (Optional - for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Logging Level (Optional)
LOG_LEVEL=INFO